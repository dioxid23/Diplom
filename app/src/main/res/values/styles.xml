<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="title_28_bold">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_22_medium">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_24_bold">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description_14px_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="text_17px_medium">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_15px_regular">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/description_card</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="systemButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item> <!-- закругление -->
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:letterSpacing">0</item>
    </style>


</resources>